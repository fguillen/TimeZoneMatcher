<!-- Button trigger modal -->
<div class="row text-right">
  <a href="#" data-toggle="modal" data-target="#newTimeZoneModal">
    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Add TimeZone
  </a>
</div>


<!-- Modal -->
<div class="modal fade" id="newTimeZoneModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add a new TimeZone</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-3 control-label">UTF Difference</label>
            <div class="col-sm-9">
              {{#x-select value=utfDifference class="form-control"}}
                {{#x-option value="-10"}}UTC -10{{/x-option}}
                {{#x-option value="-9"}}UTC -9{{/x-option}}
                {{#x-option value="-8"}}UTC -8{{/x-option}}
                {{#x-option value="-7"}}UTC -7{{/x-option}}
                {{#x-option value="-6"}}UTC -6{{/x-option}}
                {{#x-option value="-5"}}UTC -5{{/x-option}}
                {{#x-option value="-4"}}UTC -4{{/x-option}}
                {{#x-option value="-3"}}UTC -3{{/x-option}}
                {{#x-option value="-2"}}UTC -2{{/x-option}}
                {{#x-option value="-1"}}UTC -1{{/x-option}}
                {{#x-option value="0"}}UTC{{/x-option}}
                {{#x-option value="+1"}}UTC +1{{/x-option}}
                {{#x-option value="+2"}}UTC +2{{/x-option}}
                {{#x-option value="+3"}}UTC +3{{/x-option}}
                {{#x-option value="+4"}}UTC +4{{/x-option}}
                {{#x-option value="+5"}}UTC +5{{/x-option}}
                {{#x-option value="+6"}}UTC +6{{/x-option}}
                {{#x-option value="+7"}}UTC +7{{/x-option}}
                {{#x-option value="+8"}}UTC +8{{/x-option}}
                {{#x-option value="+9"}}UTC +9{{/x-option}}
              {{/x-select}}
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" {{action 'addTimeZone'}}>Add TimeZone</button>
      </div>
    </div>
  </div>
</div>
